---
import ThemeIcon from '../components/ThemeIcon.astro'
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { languages } from '../i18n/ui';
const lang = getLangFromUrl(Astro.url);
console.log(lang)
const t = useTranslations(lang);
---
<nav class="flex items-center justify-between flex-wrap bg-blue-500 p-6 ">
    <a href={`/${lang}`} class="flex items-center flex-shrink-0 text-white mr-6">
      <svg class="fill-current h-8 w-8 mr-2" width="54" height="54" viewBox="0 0 54 54" xmlns="http://www.w3.org/2000/svg"><path d="M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z"/></svg>
      <span class="font-semibold text-2xl tracking-tight">{t('home')}</span>
    </a>
    <div class="block lg:hidden">
      <button class="flex items-center px-3 py-2 border rounded font-bold border-teal-400 hover:text-white hover:border-white">
        <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>
    <div class="w-full block lg:flex lg:items-center lg:w-auto">
      <div class="text-md lg:flex-grow">
        <a href={`/${lang}`} class="block mt-4 lg:inline-block lg:mt-0 font-bold hover:text-gray-300 mr-4 text-white">
          {t('home')}
        </a>
        <a href={`/about`} class="block mt-4 lg:inline-block lg:mt-0 font-bold hover:text-gray-300 mr-4 text-white">
          {t('about')}
        </a>
        <a href={`/blog`} class="block mt-4 lg:inline-block lg:mt-0 font-bold hover:text-gray-300 text-white">
          {t('blogs')}
        </a>
        <a href={`/${lang}/login`} class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-black hover:bg-gray-300 mt-4 lg:mt-0 ml-0 lg:ml-4 md:ml-4">{t('login')}</a>
      </div>  
      <ul class="ml-0 lg:ml-3 md:ml-3">
        <!-- {Object.entries(languages).map(([lang, label]) => (
          <li>
            <a href={`/${lang}/`}>{label}</a>
          </li>
        ))} -->
        <li>
          { lang === 'gu' && <a href={`/en/`}>English</a> }
          { lang == 'en' && <a href={`/gu/`}>ગુજરાતી</a> }
        </li>
      </ul>
      <!-- <select >
   {Object.entries(languages).map(([lang, label]) => (
    <a href={`/${lang}/`}><option>{label}</option></a>
   ))}        
      </select> -->
      <ThemeIcon class="ml-0 md:ml-3 lg:ml-3"/>
    </div>
  </nav>