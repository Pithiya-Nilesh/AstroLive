---
import { Image } from 'astro:assets';
export interface Props {
	title: string;
	body: string;
	href: string;
	author: string;
	image: string;
}

const { href, title, body, author, image } = Astro.props;
---

<li class="link-card m-5">
	<a href={href}>
		<img src={image} />
		<h2 class="text-2xl mt-3">
			{title}
			<!-- <span>&rarr;</span> -->
		</h2>
		<p>
			{body}
		</p>
		<div class="flex flex-wrap justify-between">
			<strong>By: {author}</strong>
			<strong class="hv text-blue-500">Read More <span class="text-2xl">&rarr;</span></strong>
		</div>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.25rem;
		background-color: white;
		background-image: none;
		background-size: 400%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 3px 4px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}
	.hv {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		/* background-image: var(--accent-gradient);	 */
		background-color: #3b82f6
	}
	.link-card:is(:hover, :focus-within) .hv {
		color: rgb(var(--accent));
	}

</style>
